<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Details</th>
        <th>Edit</th>


    </tr>
    @foreach (var item in ViewData["dd"] as List<Drug>)
    {
        <tr>


            <td>
                <img style="width:200px;hieght=200px" src="@item.ImagePath" />

            </td>
            <td>
                <p>@item.Name</p>
            </td>
            <td>
                <a href="~/Drug/EditForm/@item.ID" class="btn btn-dark"> Edit</a>
            </td>


            <td>

                <a class="btn btn-success" href="~/Drug/ViewDetails/@item.ID">View
                    details</a>
            </td>




            <td>

                <form action=~/Drug/DeleteItem>
                    <input type="hidden" name="id" value="@item.ID" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>


        </tr>

    }
</table>
<a href="~/Drug/AddForm" class="btn btn-primary">Add new Drug</a>
