<form action="~/Drug/ActualEdit">
    <label for="ID">ID</label>
    <input type="text" id="ID" name="ID" value="@ViewBag.dd.ID" class="form-control" readonly />

    <label for="Name">Name</label>
    <input type="text" id="Name" name="Name" value="@ViewBag.dd.Name" class="form-control" />


    <label for="ImagePath">Image Path</label>
    <input type="text" id="ImagePath" name="ImagePath" value="@ViewBag.dd.ImagePath" class="form-control" />

    <label for="CompanyName">Company Name</label>
    <input type="text" id="CompanyName" name="CompanyName" value="@ViewBag.dd.CompanyName" class="form-control" />

    <label for="ManufactureDate">Manufacture Date</label>
    <input type="date" id="ManufactureDate" name="ManufactureDate"
        value="@ViewBag.dd.ManufactureDate.ToString("yyyy-MM-dd")" class="form-control" />

    <label for="ExpirationDate">Expiration Date</label>
    <input type="date" id="ExpirationDate" name="ExpirationDate"
        value="@ViewBag.dd.ExpirationDate.ToString("yyyy-MM-dd")" class="form-control" />


    <input type="submit" class="btn btn-dark" value="Edit" />
</form><a href="~/Drug/Getall">Go back to Getall</a>