@model Drug

<form method="post" asp-action="Create" asp-controller="drug">
    @Html.Partial("_DataPolicy")



    <label for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name"></span>
    


    <label for="ImagePath">ImagePath</label>
    <input type="text" asp-for="ImagePath" class="form-control" />
    <span asp-validation-for="ImagePath"></span>


    @await Component.InvokeAsync("GetDrugCompaniesComponent")


    <label for="ManufactureDate">Manufacture Date</label>
    <input type="date" asp-for="ManufactureDate" class="form-control" />
    <span asp-validation-for="ManufactureDate"></span>


    <label for="ExpirationDate">Expiration Date</label>
    <input type="date" asp-for="ExpirationDate" class="form-control" />
    <span asp-validation-for="ExpirationDate"></span>



    <input type="submit" class="btn btn-dark" value="Create" />
</form>

@await Component.InvokeAsync("GetDrugCompaniesComponent")
