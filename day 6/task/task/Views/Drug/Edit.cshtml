@model Drug
@{
}
@* <form method="Post" action="~/Department/Edit"></form> *@
@* by default ->post with the same name of the current action in the url *@
@Html.Partial("_DataPolicy")

<form method="post" asp-action="Edit" asp-controller="drug">




    <label asp-for ="Name" for="Name">Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name"></span>


    <label asp-for="ImagePath"  for="ImagePath">ImagePath</label>
    <input type="text" asp-for="ImagePath" class="form-control" />
    <span asp-validation-for="ImagePath"></span>

    @await Component.InvokeAsync("GetDrugCompaniesComponent", new { selectedCompanyName = Model.Company?.Name })


    <label asp-for="ManufactureDate" for="ManufactureDate">ManufactureDate</label>
    <input type="date" asp-for="ManufactureDate" class="form-control" />
    <span asp-validation-for="ManufactureDate"></span>


    <label asp-for="ExpirationDate" for="ExpirationDate">ExpirationDate</label>
    <input type="date" asp-for="ExpirationDate" class="form-control" />
    <span asp-validation-for="ExpirationDate"></span>



    <input type="submit" class="btn btn-dark" value="Edit" />
</form>


